<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/menu_ground">

    
    <RelativeLayout 
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView 
        android:layout_marginTop="26dip"
        android:layout_marginLeft="260dip"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_xml"
        android:id="@+id/iv_music"
        />
        <ImageView 
            android:visibility="gone"
        android:layout_marginTop="26dip"
        android:layout_marginLeft="260dip"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_no_xml"
        android:id="@+id/iv_music_no"
        />
        
    </RelativeLayout>
    
      
    
    <ImageView 
        android:id="@+id/girl"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="36dp"
        />
 
    <LinearLayout 
        android:layout_marginTop="70dip"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        
        
        
          <Button
        android:id="@+id/newGame"
        style="@style/Button_Style"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="13dip"
        android:text="@string/NewGame" />
          
          
    
    <LinearLayout 
        android:visibility="gone"
        android:id="@+id/linear_options"
        android:layout_marginLeft="50dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
        android:id="@+id/iv_this"
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_this_xml"
        />
    
    <ImageView 
        android:layout_marginLeft="30dip"
        android:id="@+id/iv_free"
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_free_xml"
        />
    </LinearLayout>
    </LinearLayout>
  
    

    <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
         <Button
        android:layout_below="@id/newGame"
        android:id="@+id/scores"
        style="@style/Button_Style"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:text="@string/Scores" />

    <Button
        android:layout_below="@id/scores"
        android:id="@+id/exit"
        style="@style/Button_Style"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:text="@string/ExitGame" />
        
    </LinearLayout>
   


</LinearLayout>
